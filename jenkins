pipeline {
    agent none
    options { timestamps(); timeout(time: 15, unit: 'MINUTES') }
    environment {
        VITE_BUILD_DIR = 'dist'
    }
    stages {
       stage('Checkout') {
    agent { label 'termux' }
    steps {
        deleteDir()
        checkout([
            $class: 'GitSCM',
            branches: [[name: '*/main']],
            userRemoteConfigs: [[
                url: 'https://github.com/HarikaGadagotti/CEM-project-devops.git',
                credentialsId: ''
            ]],
            extensions: [],
            gitTool: 'termux-git'
        ])
    }
}


        stage('Where am I (Controller)') {
            agent { label 'built-in' }
            steps {
                echo 'Running on CONTROLLER'
                echo "NODE = ${env.NODE_NAME}"
                echo "WORKSPACE = ${env.WORKSPACE}"
            }
        }

        stage('Install Dependencies') {
            agent { label 'termux' } // Termux/Linux agent
            steps {
                sh '''
                echo "Running on AGENT: $(hostname)"
                rm -rf build || true
                npm ci
                '''
            }
        }

        stage('Build & Test') {
            agent { label 'termux' }
            steps {
                sh 'npm run build'
            }
        }

        stage('Archive Artifacts') {
            agent { label 'termux' }
            steps {
                archiveArtifacts artifacts: "${VITE_BUILD_DIR}/**", fingerprint: true
                echo "Vite build artifacts saved from ${VITE_BUILD_DIR}."
            }
        }

        }
}
