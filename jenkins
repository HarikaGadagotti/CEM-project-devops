pipeline {
    agent none
    options { timestamps(); timeout(time: 15, unit: 'MINUTES') }
    environment {
        VITE_BUILD_DIR = 'dist'
    }
    stages {
        stage('Checkout') {
            agent { label 'termux' }
            steps {
                sh '''
                    echo "Cleaning workspace..."
                    rm -rf * .git || true

                    echo "Cloning repository manually using Termux git..."
                    git clone https://github.com/HarikaGadagotti/CEM-project-devops.git .

                    echo "Repository cloned successfully."
                    ls -la
                '''
            }
        }

        stage('Where am I (Controller)') {
            agent { label 'built-in' }
            steps {
                echo 'Running on CONTROLLER'
                echo "NODE = ${env.NODE_NAME}"
                echo "WORKSPACE = ${env.WORKSPACE}"
            }
        }

        stage('Install Dependencies') {
            agent { label 'termux' }
            steps {
                sh '''
                    echo "Running on AGENT: $(hostname)"
                    echo "Current directory: $(pwd)"
                    rm -rf build || true
                    npm ci
                '''
            }
        }

        stage('Build & Test') {
            agent { label 'termux' }
            steps {
                sh 'npm run build'
            }
        }

        stage('Archive Artifacts') {
            agent { label 'termux' }
            steps {
                archiveArtifacts artifacts: "${VITE_BUILD_DIR}/**", fingerprint: true
                echo "Vite build artifacts saved from ${VITE_BUILD_DIR}."
            }
        }
    }
}